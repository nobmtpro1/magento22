<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
      <referenceContainer name="header.container" htmlId="header">
         <referenceContainer name="header.panel.wrapper" htmlId="header_top"></referenceContainer>
         <referenceContainer name="header-wrapper" htmlId="header_middle"></referenceContainer>
         <referenceContainer name="page.top" htmlId="header_bottom" htmlTag="div"></referenceContainer>
      </referenceContainer>

      <move element="page.top" destination="header.container" after="header-wrapper" />

      <referenceContainer name="report.bugs" remove="true" />
   </body>
</page>